<h1>Profil użytkownika</h1>
<form action="/profile" method="post" class="mb-4">
  <div class="mb-3">
    <label class="form-label">Imię</label>
    <input name="name" class="form-control" value="<%= user.name %>">
  </div>
  <div class="mb-3">
    <label class="form-label">Email (readonly)</label>
    <input class="form-control" value="<%= user.email %>" readonly>
  </div>
  <div class="mb-3">
    <label class="form-label">Waga (kg)</label>
    <input name="weight" type="number" step="0.1" class="form-control" value="<%= user.weight || '' %>">
  </div>
  <div class="mb-3">
    <label class="form-label">Wzrost (cm)</label>
    <input name="height" type="number" step="0.1" class="form-control" value="<%= user.height || '' %>">
  </div>
  <div class="mb-3">
    <label class="form-label">Wiek</label>
    <input name="age" type="number" class="form-control" value="<%= user.age || '' %>">
  </div>
  <div class="mb-3">
    <label class="form-label">Cel</label>
    <input name="goal" class="form-control" value="<%= user.goal || '' %>">
  </div>
  <button class="btn btn-primary">Zapisz profil</button>
</form>
