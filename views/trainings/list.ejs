<div class="d-flex justify-content-between align-items-center mb-3">
  <h1>Lista treningów</h1>
  <a class="btn btn-primary" href="/trainings/new">Dodaj trening</a>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Typ</th>
      <th>Intensywność</th>
      <th>Czas (min)</th>
      <th>Data</th>
      <th>Akcje</th>
    </tr>
  </thead>
  <tbody>
    <% trainings.forEach(t => { %>
      <tr>
        <td><%= t.type %></td>
        <td><%= t.intensity %></td>
        <td><%= t.duration %></td>
        <td><%= t.date %></td>
        <td>
          <a class="btn btn-sm btn-warning" href="/trainings/<%= t.id %>/edit">Edytuj</a>
          <form action="/trainings/<%= t.id %>/delete" method="post" class="d-inline">
            <button class="btn btn-sm btn-danger">Usuń</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
